<resources xmlns:xliff="urn:oasis:names:tc:xliff:document:1.2">
    <!-- Action bar title when the app is in standalone (file manager) mode [CHAR LIMIT=32] -->
    <string name="title_standalone">Arxius</string>

    <!-- Toast shown after successfully deleting files -->
    <string name="toast_success_delete">Arxius esborrats</string>

    <!-- Title of the Delete confirmation dialog -->
    <string name="dialog_delete_confirm_title">¿Esteu segur que voleu suprimir els fitxers?</string>

    <!-- Text shown in a toast when the user copies files -->
    <plurals name="files_copied">
        <item quantity="one">L\'arxiu s\'ha copiat al porta-retalls</item>
        <item quantity="other">%d arxius s\'han copiat al porta-retalls</item>
    </plurals>

    <!-- Text shown in a toast when the user pastes files -->
    <plurals name="files_pasted">
        <item quantity="one">S\'ha enganxat el fitxer. L\'operació podria completar-se en segon pla.</item>
        <item quantity="other">S\'han pegat %d arxius. L\'operació podria completar-se en segon pla.</item>
    </plurals>

    <!-- Text show in the progress dialog while files are being copied -->
    <string name="copy_in_progress">Copiant...</string>

    <!-- Text show in the progress dialog while files are being deleted -->
    <string name="delete_in_progress">Borrant...</string>

    <plurals name="dialog_delete_confirm_message">
        <item quantity="one">¿Vol eliminar l\'arxiu de forma permanent?</item>
        <item quantity="other">¿Vol eliminar %d arxius de forma permanent?</item>
    </plurals>
</resources>
