<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:systemui="http://schemas.android.com/apk/res/com.android.systemui"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top"
    android:background="@drawable/qs_tile_background"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/images"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:padding="4dp"
        android:orientation="horizontal">
        <com.android.systemui.BatteryMeterView
            android:id="@+id/image"
            android:layout_width="22dp"
            android:layout_height="32dp"
            android:layout_gravity="top|center_horizontal"
            systemui:batteryView="quicksettings"
            />
        <com.android.systemui.BatteryCircleMeterView
            android:id="@+id/circle_battery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            systemui:batteryView="quicksettings"
            />
        <com.android.systemui.BatteryPercentMeterView
            android:id="@+id/percent_battery"
            style="@style/TextAppearance.QuickSettings.TileView"
            android:textColor="@color/batterymeter_percent_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            systemui:batteryView="quicksettings_back"
            />
        <TextView
            style="@style/TextAppearance.QuickSettings.TileView"
            android:id="@+id/label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            />
    </LinearLayout>

    <TextView
        style="@style/TextAppearance.QuickSettings.TileView"
        android:id="@+id/function"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        />
</LinearLayout>
