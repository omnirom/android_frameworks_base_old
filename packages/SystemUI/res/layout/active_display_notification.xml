<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/notification_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TextView
        android:id="@+id/notificationtitle"
        style="@android:style/TextAppearance.StatusBar.EventContent.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/notificationicon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        />
    <TextView
        android:id="@+id/notificationtext2"
        style="@android:style/TextAppearance.StatusBar.EventContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:visibility="gone"
        android:singleLine="false"
        android:layout_toLeftOf="@+id/notificationicon"
        android:layout_below="@+id/notificationtitle"
        />
    <TextView
        android:id="@+id/notificationtext"
        style="@android:style/TextAppearance.StatusBar.EventContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:singleLine="false"
        android:layout_alignWithParentIfMissing="true"
        android:layout_toLeftOf="@+id/notificationicon"
        android:layout_below="@+id/notificationtext2"
        />
    <TextView
        android:id="@+id/notificationinfo"
        android:textAppearance="@style/TextAppearance.StatusBar.Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:singleLine="true"
        android:layout_alignWithParentIfMissing="true"
        android:layout_toLeftOf="@+id/notificationicon"
        android:layout_below="@+id/notificationtext"
        />
    <DateTimeView
        android:id="@+id/notificationtime"
        android:textAppearance="@style/TextAppearance.StatusBar.Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:singleLine="true"
        android:visibility="gone"
        android:layout_alignWithParentIfMissing="true"
        android:layout_toLeftOf="@+id/notificationicon"
        android:layout_below="@+id/notificationtext"
        />
    <ImageView android:id="@+id/notificationicon"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:scaleType="center"
          android:layout_alignParentRight="true"
          android:layout_alignParentTop="true"
          />
</RelativeLayout>
