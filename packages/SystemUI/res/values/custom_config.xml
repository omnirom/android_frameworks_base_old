<!-- These resources are around just to allow their values to be customized
     for different hardware and product builds. -->
<resources>

    <!-- The default tiles to display in QuickSettings -->
    <string name="quick_settings_tiles_extra" translatable="false">
        aod,heads_up,nfc,power,screenshot,weather
    </string>

    <!--<string name="quick_settings_tiles_extra" translatable="false">
        aod,caffeine,immersive,dataswitch
    </string>-->

    <!-- absolute maximum for qs columns 
         does NOT mean this value can be reached
         there is always check that uses the current available space
         to get the maximal number to be used
         so this value is used only in the config ui -->
    <integer name="quick_settings_num_columns_port_max">8</integer>
    <integer name="quick_settings_num_columns_land_max">9</integer>
    <!-- Color of the FOD view -->
    <color name="config_fodColor">#00ff00</color>
    <color name="config_fodColorBackground">#00212121</color>

    <!-- Whether to use fingerprint pressed image -->
    <bool name="config_fodPressedImage">false</bool>

    <!-- if true will auto-hide all battery display if battery present is false -->
    <bool name="config_batteryPresentVisibility">false</bool>

    <!-- The CPU temperature sensor path, defaults to empty -->
    <string name="config_cpuTempSensor" translatable="false"></string>

    <!-- The CPU temperature divider, if needed -->
    <integer name="config_cpuTempDivider" translatable="false">1</integer>

    <!-- The CPUs to display in CPUInfoService view -->
    <string name="config_displayCpus" translatable="false"></string>

    <string name="config_navBarLayoutHandleArrows" translatable="false">back[1.7WC];home_handle;ime_switcher[1.7WC]</string>
</resources>
