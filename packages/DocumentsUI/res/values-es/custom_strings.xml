<resources xmlns:xliff="urn:oasis:names:tc:xliff:document:1.2">
    <!-- Action bar title when the app is in standalone (file manager) mode [CHAR LIMIT=32] -->
    <string name="title_standalone">Archivos</string>

    <!-- Toast shown after successfully deleting files -->
    <string name="toast_success_delete">Archivos borrados</string>

    <!-- Title of the Delete confirmation dialog -->
    <string name="dialog_delete_confirm_title">¿Seguro que quiere borrar los archivos?</string>

    <!-- Menu item title that copies the selected documents [CHAR LIMIT=24] -->
    <string name="menu_copy">Copiar</string>
    <!-- Menu item title that cuts the selected documents [CHAR LIMIT=24] -->
    <string name="menu_cut">Mover</string>
    <!-- Menu item title that pastes the selected documents [CHAR LIMIT=24] -->
    <string name="menu_paste">Pegar</string>


    <!-- Text shown in a toast when the user copies files -->
    <plurals name="files_copied">
        <item quantity="one">El archivo se ha copiado al portapapeles</item>
        <item quantity="other">%d archivos se han copiado al portapapeles</item>
    </plurals>

    <!-- Text shown in a toast when the user pastes files -->
    <plurals name="files_pasted">
        <item quantity="one">Se ha pegado el archivo. La operación podría completarse en segundo plano.</item>
        <item quantity="other">Se han pegado %d archivos. La operación podría completarse en segundo plano. </item>
    </plurals>

    <!-- Text show in the progress dialog while files are being copied -->
    <string name="copy_in_progress">Copiando...</string>

    <!-- Text show in the progress dialog while files are being deleted -->
    <string name="delete_in_progress">Borrando...</string>

    <plurals name="dialog_delete_confirm_message">
        <item quantity="one">¿Quiere eliminar el archivo de forma permanente?</item>
        <item quantity="other">¿Quiere eliminar %d archivos de forma permanente?</item>
    </plurals>

    <string name="ok">Confirmar</string>
    <string name="cancel">Cancelar</string>
</resources>
