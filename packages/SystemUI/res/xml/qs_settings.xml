<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/quick_settings">

    <CheckBoxPreference
        android:key="qs_equal_tile"
        android:title="@string/qs_equal_tile_title"
        android:summary="@string/qs_equal_tile_summary"
        android:persistent="false" />

    <ListPreference
        android:key="qs_tile_columns"
        android:title="@string/qs_tile_columns_title"
        android:entries="@array/qs_tile_columns_entries"
        android:entryValues="@array/qs_tile_columns_values"
        android:defaultValue="3"
        android:persistent="false" />

    <com.android.systemui.tuner.SeekBarPreference
        android:key="qs_tile_bg_opacity"
        android:title="@string/qs_tile_bg_opacity_title"
        android:defaultValue="255"
        android:persistent="false" />
</PreferenceScreen>
